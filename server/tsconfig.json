{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"ES2020"
		],
		"module": "node16",
		"moduleResolution": "node16",
		"ignoreDeprecations": "5.0",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"skipLibCheck": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}